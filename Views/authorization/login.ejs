<html>
    <head>
            <link href="/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
            <link href="/css/style.css" rel="stylesheet" id="style">
    </head>
    <body>
        <form method="post" action="/login" style="margin-top: 15%">
            <div class="form-group col-md-6 formStyleHeader">
                    <div  class="col-md-4 formStyle">
                        <label class="col-md-12"> User Name </label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="username"  class="form-control col-md-8" />
                    </div>
                </div>
                <div class="form-group col-md-6 formStyleHeader">
                        <div  class="col-md-4 formStyle">
                            <label class="col-md-12"> Password </label>
                        </div>
                        <div class="col-md-6">
                            <input type="password" name="password" class="form-control col-md-8" />
                        </div>
                    </div>
                    <div class="form-group col-md-6 formStyleHeader">
                        <div  class="col-md-offset-4">
                             <span class="text-danger"> <%=msg%> </span>
                        </div>
                    </div>
                    <div class="form-group">
                            <div class="col-md-offset-5 col-md-2">
                                   <input type="submit" class="btn btn-default" value="Login" />
                                   <a class="link" href="/register">Register</a>
                           </div>
                       </div>  

        </form>
        <script src="/js/jquery-3.2.1.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </body>
</html>