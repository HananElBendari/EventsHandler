<html>
    <head>
       <%include ../layout/header%>
    </head>
    <body>
        
        <div class="box-body table-responsive col-md-8 col-md-offset-2">           
                <h3> Users List </h3>

                <table  class="table table-bordered table-hover tablecontainer">
                    <thead>
                <tr><th>id</th><th>name</th><th>Username</th><th>Gender</th><th></th><th></th></tr>
            </thead>
                   <tbody>          
                <% data.forEach((elm)=>{%>
                    <tr>
                    <td> <%=elm._id%> </td>
                    <td> <%=elm.name%> </td>
                    <td> <%=elm.username%> </td>
                    <td> <%=elm.gender%> </td>
                    <td> <a href="/users/edit/<%=elm._id%>"> Edit</a> </td>
                    <td> <a href="/users/delete/<%=elm._id%>"> delete</a> </td>

                    </tr>
                <%})%>
            </tbody> 
       </table>
      </div>

      <%include ../layout/footer%>
      
    </body>
</html>