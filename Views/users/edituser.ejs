<%include ../layout/headerUser%>
<body>
    <form action="/users/edit" method="post" style="margin-top: 6%">

        <div class="form-group col-md-6 formStyleHeader">
                <div  class="col-md-4 formStyle">
                    <label class="col-md-12"> Id </label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="_id" class="form-control col-md-8" value="<%=user._id%>" disabled />
                </div>
            </div>
            <div class="form-group col-md-6 formStyleHeader">
                    <div  class="col-md-4 formStyle">
                        <label class="col-md-12"> Name </label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="name" class="form-control col-md-8" value="<%=user.name%>" />
                    </div>
                </div>
                <div class="form-group col-md-6 formStyleHeader">
                        <div  class="col-md-4 formStyle">
                            <label class="col-md-12"> User Name </label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="username" class="form-control col-md-8" value="<%=user.name%>" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                            <div class="col-md-offset-5 col-md-2">
                                   <input type="submit" class="btn btn-default" value="Update" />
                           </div>
                       </div>  
    </form>
<%include ../layout/footer%>