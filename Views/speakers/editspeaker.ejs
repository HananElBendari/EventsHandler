<%include ../layout/header%>
<body>
    <form action="/speakers/edit/<%=speaker._id%>" method="post" style="margin-top: 6%">

        <div class="form-group col-md-6 formStyleHeader">
                <div  class="col-md-4 formStyle">
                    <label class="col-md-12"> Id </label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="_id" class="form-control col-md-8" value="<%=speaker._id%>" disabled />
                </div>
            </div>
            <div class="form-group col-md-6 formStyleHeader">
                    <div  class="col-md-4 formStyle">
                        <label class="col-md-12"> Name </label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="name" class="form-control col-md-8" value="<%=speaker.name%>" />
                    </div>
                </div>
                <div class="form-group col-md-6 formStyleHeader">
                        <div  class="col-md-4 formStyle">
                            <label class="col-md-12"> Speaker </label>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="title" class="form-control col-md-8" value="<%=speaker.title%>" />
                        </div>
                    </div>


                    <div class="form-group">
                            <div class="col-md-offset-5 col-md-2">
                                   <input type="submit" class="btn btn-default" value="Update" />
                           </div>
                       </div>  
    </form>
<%include ../layout/footer%>