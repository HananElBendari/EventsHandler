<%include ../layout/header%>
<body>
    <form action="/events/add" method="post" style="margin-top:6%">

  
        <div class="form-group col-md-6 formStyleHeader">
                <div  class="col-md-4 formStyle">
                    <label class="col-md-12"> Title </label>
                </div>
                <div class="col-md-6">
                    <input type="text" name="title" class="form-control col-md-8" />
                </div>
            </div>

            <div class="form-group col-md-6 formStyleHeader">
                    <div  class="col-md-4 formStyle">
                        <label class="col-md-12"> Main Speaker </label>
                    </div>
                    <div class="col-md-6">
                        <select name="mainSpeaker" class="form-control select2">
                            <option selected="selected"> Select a Main speaker </option>
                            <% speakers.forEach((speaker)=>{%>
                                <option value="<%=speaker._id%>"><%=speaker.name%></option>
                            <%})%>
                        </select>                    
                    </div>
                </div>

                <div class="form-group col-md-6 formStyleHeader">
                        <div  class="col-md-4 formStyle">
                            <label class="col-md-12"> Other Speaker </label>
                        </div>
                        <div class="col-md-6">
                            <select name="otherSpeakers" multiple class="form-control select2">
                                <% speakers.forEach((speaker)=>{%>
                                    <option value="<%=speaker._id%>"><%=speaker.name%></option>
                               <%})%>
                            </select>                    
                        </div>
                    </div>

                    <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                   <input type="submit" class="btn btn-default" value="save" />
                           </div>
                       </div> 
    </form>

    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/selectHm.js"></script>
<%include ../layout/footer%>